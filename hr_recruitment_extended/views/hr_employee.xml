<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>

        <record id="hr_view_employee_form_inherit_familyinfo" model="ir.ui.view">
            <field name="name">hr.view.employee.form.inherit.familyinfo</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">

                <field name="place_of_birth" position="after">
                    <field name="country_of_birth"/>
                </field>

                <xpath expr="//page[@string='Personal Information']/group/group[@string='Contact Information']"
                       position="replace"/>

                <notebook position="inside">

                    <page string="Contact Information" groups="base.group_user,base.group_hr_user">
                        <group>
                            <group string="Residential address">
                                <field name="address_home_id"
                                       context="{'show_address': 1, 'default_customer': False}"
                                       options='{"always_reload": True, "highlight_first_line": True}'/>
                                <field name="is_same_address" string="Same as Correspondence Address"/>
                            </group>
                            <group string="Permanent address" attrs="{'invisible':[('is_same_address', '=', True)]}">
                                <field name="street_ht"/>
                                <field name="street2_ht"/>
                                <field name="city_ht"/>
                                <field name="state_id_ht"/>
                                <field name="country_id_ht"/>
                                <field name="zip_ht"/>
                                <field name="phone_ht"/>
                                <field name="fax_ht"/>
                            </group>
                        </group>
                    </page>

                    <page string="Academic Experiences" groups="base.group_user,base.group_hr_user">
                        <field name="academic_ids" context="{'default_employee_id': active_id}">
                            <tree string="Academic Experiences">
                                <field name="name" string="Qualification"/>
                                <field name="study_field"/>
                                <field name="organization" string="Institution"/>
                                <field name="location"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                                <field name="grade"/>
                            </tree>
                            <form string="Academic Experience">
                                <group>
                                    <group name="main">
                                        <field name="name" string="Qualification"/>
                                        <field name="study_field"/>
                                        <field name="start_date"/>
                                        <field name="is_still" string="Present"/>
                                        <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                        <field name="grade"/>
                                    </group>
                                    <group>
                                        <field name="organization" string="Institution"/>
                                        <field name="location"/>
                                    </group>
                                </group>
                                <separator string="Activities" colspan="4"/>
                                <field name="activities"/>
                                <separator string="Description" colspan="4"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </form>
                        </field>
                    </page>

                    <page string="Professional Experiences" groups="base.group_user,base.group_hr_user">
                        <field name="experience_ids" context="{'default_employee_id': active_id}">
                            <tree string="Professional Experiences">
                                <field name="name" string="Position"/>
                                <field name="organization" string="Employer"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </tree>
                            <form string="Professional Experience">
                                <group>
                                    <group name="main">
                                        <field name="name" string="Position"/>
                                        <field name="organization" string="Employer"/>
                                        <field name="location"/>
                                        <field name="type" string="Work Type"/>
                                    </group>
                                    <group>
                                        <field name="start_date"/>
                                        <field name="is_still" string="Present"/>
                                        <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                        <!-- todo: notice_period is no longer used in employee form-->
                                        <field name="notice_period" attrs="{'invisible':[('is_still', '=', False)]}"/>
                                    </group>
                                    <group string="For Verification">
                                        <field name="referee_name"/>
                                        <field name="referee_position"/>
                                        <field name="referee_contact"/>
                                    </group>
                                </group>
                                <separator string="Description" colspan="4"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </form>
                        </field>
                    </page>

                    <page string="Certifications" groups="base.group_user,base.group_hr_user">
                        <field name="certification_ids" context="{'default_employee_id': active_id}">
                            <tree string="Certifications">
                                <field name="name" string="Certification"/>
                                <field name="certification" string="# Certificate"/>
                                <field name="organization" string="Issued By"/>
                                <field name="start_date"/>
                                <field name="end_date"/>
                            </tree>
                            <form string="Certifications">
                                <group>
                                    <group name="main">
                                        <field name="name" string="Certification"/>
                                        <field name="certification" string="# Certification"/>
                                        <field name="start_date"/>
                                        <field name="is_still"/>
                                        <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                    </group>
                                    <group>
                                        <field name="organization" string="Issued By"/>
                                        <field name="location"/>
                                    </group>
                                </group>
                                <separator string="Description" colspan="4"/>
                                <field name="description" colspan="4" nolabel="1"/>
                            </form>
                        </field>
                    </page>

                    <page string="Family" groups="base.group_hr_user">
                        <group>
                            <group string="Spouse">
                                <field name="fam_spouse"/>
                                <field name="fam_spouse_employer"/>
                                <field name="fam_spouse_tel"/>
                            </group>
                            <group string="Parents">
                                <field name="fam_father"/>
                                <field name="fam_father_date_of_birth"/>
                                <field name="fam_mother"/>
                                <field name="fam_mother_date_of_birth"/>
                            </group>
                        </group>
                        <group string="Children">
                            <field name="fam_children_ids" nolabel="1"/>
                        </group>
                    </page>

                    <page string="reference" groups="base.group_hr_user">
                        <group string="Job reference">
                            <field name="ref_name"/>
                            <field name="ref_org"/>
                            <field name="ref_rel"/>
                            <field name="ref_contact"/>
                        </group>
                    </page>

                </notebook>

            </field>
        </record>

    </data>
</openerp>
