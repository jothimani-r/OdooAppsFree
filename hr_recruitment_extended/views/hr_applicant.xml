<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
        <record id="crm_case_form_view_job_inheirt" model="ir.ui.view">
            <field name="name">crm.case.form.view.job</field>
            <field name="model">hr.applicant</field>
            <field name="inherit_id" ref="hr_recruitment.crm_case_form_view_job"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="attributes">
                    <attribute name="string">Residential address</attribute>
                </field>
                <field name="description" position="before">
                    <notebook>
                        <page string="Personal Info">
                            <group>
                                <field name="middlename"/>
                                <field name="lastname"/>
                                <field name="is_same_address"/>
                                <group string="Citizenship &amp; Other Info">
                                    <field name="country_id" required="True"/>
                                    <field name="identification_id" required="True"/>
                                    <field name="passport_id"/>
                                </group>
                                <group string="Permanent address"
                                       attrs="{'invisible':[('is_same_address', '=', True)]}">
                                    <field name="street_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="street2_ht"/>
                                    <field name="city_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="zip_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="state_id_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="country_id_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="phone_ht" attrs="{'required':[('is_same_address', '=', False)]}"/>
                                    <field name="fax_ht"/>
                                </group>
                                <group string="Status">
                                    <field name="gender" required="True"/>
                                    <field name="marital" required="True"/>
                                </group>
                                <group string="Birth">
                                    <field name="birthday" required="True"/>
                                    <field name="place_of_birth"/>
                                    <field name="country_of_birth"/>
                                </group>

                            </group>
                        </page>

                        <page string="Academic Experiences" groups="base.group_user,base.group_hr_user">
                            <field name="academic_ids" context="{'default_employee_id': active_id}">
                                <tree string="Academic Experiences">
                                    <field name="name" string="Qualification"/>
                                    <field name="study_field"/>
                                    <field name="organization" string="Institution"/>
                                    <field name="location"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                    <field name="grade"/>
                                </tree>
                                <form string="Academic Experience">
                                    <group>
                                        <group name="main">
                                            <field name="name" string="Qualification"/>
                                            <field name="study_field"/>
                                            <field name="start_date"/>
                                            <field name="is_still" string="Present"/>
                                            <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                            <field name="grade"/>
                                        </group>
                                        <group>
                                            <field name="organization" string="Institution"/>
                                            <field name="location"/>
                                        </group>
                                    </group>
                                    <separator string="Activities" colspan="4"/>
                                    <field name="activities"/>
                                    <separator string="Description" colspan="4"/>
                                    <field name="description" colspan="4" nolabel="1"/>
                                </form>
                            </field>
                        </page>

                        <page string="Professional Experiences" groups="base.group_user,base.group_hr_user">
                            <field name="experience_ids" context="{'default_applicant_id': active_id}">
                                <tree string="Professional Experiences">
                                    <field name="name" string="Position"/>
                                    <field name="organization" string="Employer"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Professional Experience">
                                    <group>
                                        <group name="main">
                                            <field name="name" string="Position"/>
                                            <field name="organization" string="Employer"/>
                                            <field name="location"/>
                                            <field name="type" string="Work Type"/>
                                        </group>
                                        <group>
                                            <field name="start_date"/>
                                            <field name="is_still" string="Present"/>
                                            <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                            <!-- todo: notice_period is no longer used in employee form-->
                                            <field name="notice_period"
                                                   attrs="{'invisible':[('is_still', '=', False)]}"/>
                                        </group>
                                        <group string="For Verification">
                                            <field name="referee_name"/>
                                            <field name="referee_position"/>
                                            <field name="referee_contact"/>
                                        </group>
                                    </group>
                                    <separator string="Description" colspan="4"/>
                                    <field name="description" colspan="4" nolabel="1"/>
                                </form>
                            </field>
                        </page>

                        <page string="Certifications" groups="base.group_user,base.group_hr_user">
                            <field name="certification_ids" context="{'default_applicant_id': active_id}">
                                <tree string="Certifications">
                                    <field name="name" string="Certification"/>
                                    <field name="certification" string="# Certificate"/>
                                    <field name="organization" string="Issued By"/>
                                    <field name="start_date"/>
                                    <field name="end_date"/>
                                </tree>
                                <form string="Certifications">
                                    <group>
                                        <group name="main">
                                            <field name="name" string="Certification"/>
                                            <field name="certification" string="# Certification"/>
                                            <field name="start_date"/>
                                            <field name="is_still"/>
                                            <field name="end_date" attrs="{'invisible':[('is_still', '=', True)]}"/>
                                        </group>
                                        <group>
                                            <field name="organization" string="Issued By"/>
                                            <field name="location"/>
                                        </group>
                                    </group>
                                    <separator string="Description" colspan="4"/>
                                    <field name="description" colspan="4" nolabel="1"/>
                                </form>
                            </field>
                        </page>
                        <page string="reference" groups="base.group_hr_user">
                            <group string="Job reference">
                                <group>
                                    <field name="ref_name"/>
                                    <field name="ref_org"/>
                                </group>
                                <group>
                                    <field name="ref_rel"/>
                                    <field name="ref_contact"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </field>
            </field>
        </record>
    </data>
</openerp>